<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout_propg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/subtraction_1"
        android:id="@+id/blue_curve"
        android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/profile_propg"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_85sdp"
            android:src="@drawable/user_profile" />

        <ImageButton
            android:id="@+id/edit_propg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_propg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="151dp"
            android:layout_marginTop="0dp"
            android:background="#ECF2FE"
            android:src="@drawable/edit_symbol" />

        <TextView
            android:id="@+id/edit_txt_propg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="248dp"
            android:layout_marginEnd="174dp"
            android:text="Edit"
            android:textColor="@color/midnight_blue"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />


    </RelativeLayout>




</FrameLayout>